<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_marginBottom="15dp">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:titleMarginStart="30dp"
        android:titleTextColor="@color/colorWhite"

        >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_arrow"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/back_arrow"
            android:layout_toRightOf="@+id/back_arrow"
            android:text="Inbox"
            android:textColor="#1f1f1f"
            android:textSize="40dp" />


    </android.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/messagebox"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sent_message">

        <ImageView
            android:id="@+id/image_chat"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/grinch"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat"
            android:textSize="16dp"
            android:textColor="#ffffff"
            android:text="Grinch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="Challenge me to save Christmas"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat"
            android:layout_below="@+id/name_chat"


            ></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sent_message">

        <ImageView
            android:id="@+id/image_chat2"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/daenerys"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat2"
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:text="Daenerys Targaryen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="Let's see who is faster you or my dragon"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat2"
            android:layout_below="@+id/name_chat2"


            ></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sent_message">

        <ImageView
            android:id="@+id/image_chat3"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/johnny"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat3"
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:text="Johnny Depp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="Let's race winner gets my home"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat3"
            android:layout_below="@+id/name_chat3"


            ></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sent_message">

        <ImageView
            android:id="@+id/image_chat4"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gordon"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat4"
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:text="Gordon Ramsay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="Let's walk through my resto"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat4"
            android:layout_below="@+id/name_chat4"


            ></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sent_message">

        <ImageView
            android:id="@+id/image_chat5"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/michael"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat5"
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:text="Michael Scott"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="I am running away from my responsibilities. And it feels good."
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat5"
            android:layout_below="@+id/name_chat5"


            ></TextView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_sent_message">

        <ImageView
            android:id="@+id/image_chat6"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/andy"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat6"
            android:textSize="16dp"
            android:textColor="#ffffffff"
            android:text="Andy Bernard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat6"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="I've walked two marathons. Pretty sure I can handle a 5k"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat6"
            android:layout_below="@+id/name_chat6"


            ></TextView>


    </RelativeLayout>


</LinearLayout>


