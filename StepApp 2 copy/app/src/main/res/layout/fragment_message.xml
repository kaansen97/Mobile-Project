<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layout_marginBottom="15dp">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:titleMarginStart="30dp"
        android:titleTextColor="#ffffff"

        >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_arrow"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/back_arrow"
            android:layout_toRightOf="@+id/back_arrow"
            android:text="Inbox"
            android:textColor="#1f1f1f"
            android:textSize="40dp" />


    </android.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/messagebox"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/image_chat"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"

            ></ImageView>
        <TextView
            android:id="@+id/name_chat"
            android:textSize="16dp"
            android:textColor="#4a4a4a"
            android:text="John Kusack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        <TextView
            android:textColor="#9b9b9b"
            android:textSize="14dp"
            android:text="Heyy let's run together"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_chat"
            android:layout_below="@+id/name_chat"


            ></TextView>


    </RelativeLayout>
