<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="activity.ChatActivity"
    android:background="@color/colorPrimaryDark">

    <android.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:titleMarginStart="30dp"
        android:titleTextColor="#ffffff"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_arrow"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/back_arrow"
            android:layout_toRightOf="@+id/back_arrow"
            android:text="Grinch"
            android:textColor="#1f1f1f"
            android:textSize="30dp" />


    </android.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/content_top"
        app:layout_constraintBottom_toTopOf="@+id/edittext"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

    </View>

    <View
        android:id="@+id/messagercv"
        android:layout_width="228dp"
        android:layout_height="88dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/background_received_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

    </View>

    <TextView
        android:layout_width="161dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toBottomOf="@+id/messagercv"
        app:layout_constraintEnd_toEndOf="@+id/messagercv"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="@+id/messagercv"
        app:layout_constraintTop_toTopOf="@+id/messagercv"
        android:text="Challenge me to save Christmas"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <FrameLayout
        android:id="@+id/layoutsend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:padding="8dp"
        android:src="@drawable/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/colorWhite" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/text_here"
        android:paddingStart="16dp"
        android:textColorHint="#1f1f1f"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/appCompatImageView"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>